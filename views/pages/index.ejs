<%- include('../partials/header') %>

<section class="hero">
  <div class="container">
    <span style="color: var(--primary-color); font-weight: 800; text-transform: uppercase; letter-spacing: 0.1em; font-size: 0.9rem; margin-bottom: 1rem; display: block;">Engineering Excellence</span>
    <h1>N-Squre Engineering Design & Building pvt.Ltd</h1>
    <p style="font-size: 1.5rem; color: var(--text-secondary); margin-bottom: 2.5rem; max-width: 700px;">Complete Civil Engineering & Consultancy Solutions for a sustainable future.</p>
    <div style="display: flex; gap: 1rem;">
      <a href="/contact" class="btn">Get a Quote</a>
      <a href="/services" class="btn btn-outline">Our Services</a>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="mb-4 text-center">
      <h2>Our Core Services</h2>
      <p>Comprehensive solutions for modern infrastructure.</p>
    </div>
    <div class="grid grid-3">
      <% services.slice(0, 3).forEach(service => { %>
        <div class="card service-card" style="border-top: 4px solid var(--primary-color);">
          <h3 style="color: var(--primary-color);"><%= service.title %></h3>
          <p><%= service.shortDescription %></p>
          <a href="/services/<%= service.slug %>" class="btn btn-outline" style="margin-top: 1rem; width: 100%; text-align: center;">View Details</a>
        </div>
      <% }) %>
    </div>
    <div class="text-center" style="margin-top: 3rem;">
      <a href="/services" class="btn btn-outline">View All Services</a>
    </div>
  </div>
</section>

<section class="section" style="background-color: #fafafa;">
  <div class="container">
    <div class="grid grid-2">
      <div>
        <h2>Why Choose Us</h2>
        <p>We combine technical precision with creative problem-solving to deliver projects that stand the test of time.</p>
        <ul style="margin-top: 2rem;">
          <li style="margin-bottom: 1rem; border-bottom: 1px solid #ddd; padding-bottom: 0.5rem;"><strong>Expert Team:</strong> Licensed engineers and architects.</li>
          <li style="margin-bottom: 1rem; border-bottom: 1px solid #ddd; padding-bottom: 0.5rem;"><strong>Quality Assurance:</strong> Strict adherence to safety standards.</li>
          <li style="margin-bottom: 1rem; border-bottom: 1px solid #ddd; padding-bottom: 0.5rem;"><strong>Timely Delivery:</strong> Efficient project management.</li>
        </ul>
      </div>
      <div style="background: var(--primary-color); color: #fff; padding: 4rem; display: flex; align-items: center; justify-content: center; border-radius: 12px; box-shadow: 0 20px 40px rgba(0, 86, 179, 0.15);">
        <div class="text-center">
          <h3 style="font-size: 4rem; margin-bottom: 0; color: #fff;">10+</h3>
          <p style="color: rgba(255,255,255,0.8); font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; font-size: 0.8rem;">Years of Experience</p>
          <h3 style="font-size: 4rem; margin-bottom: 0; margin-top: 2rem; color: #fff;">500+</h3>
          <p style="color: rgba(255,255,255,0.8); font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; font-size: 0.8rem;">Projects Completed</p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="mb-4 text-center">
      <h2>Recent Projects</h2>
    </div>
    <div class="grid grid-3">
      <% projects.slice(0, 3).forEach(project => { %>
        <div class="card project-card" style="padding: 0; border-radius: 12px; overflow: hidden;">
          <img src="<%= project.image %>" alt="<%= project.title %>">
          <div style="padding: 1.5rem;">
            <p style="color: var(--primary-color); font-weight: 700; text-transform: uppercase; font-size: 0.75rem; letter-spacing: 0.05em; margin-bottom: 0.5rem;"><%= project.category %></p>
            <h3 style="font-size: 1.25rem;"><%= project.title %></h3>
            <a href="/projects/<%= project.id %>" style="text-decoration: none; font-weight: 700; color: var(--primary-color); font-size: 0.9rem; display: flex; align-items: center; gap: 0.5rem;">View Project &rarr;</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
