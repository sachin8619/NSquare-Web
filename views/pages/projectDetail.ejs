<%- include('../partials/header') %>

<section class="section">
  <div class="container">
    <h1 style="color: var(--primary-color);"><%= project.title %></h1>
    <p style="font-size: 1.2rem; margin-bottom: 2rem; color: var(--text-secondary); font-weight: 600;"><%= project.category %> | <%= project.location %></p>
    
    <img src="<%= project.image %>" alt="<%= project.title %>" style="width: 100%; height: 500px; object-fit: cover; margin-bottom: 3rem; border-radius: 12px; box-shadow: 0 20px 40px rgba(0,0,0,0.1);">

    <div class="grid grid-2">
      <div>
        <h3 style="color: var(--primary-color);">Project Description</h3>
        <p><%= project.fullDescription %></p>
      </div>
      <div class="card" style="background: var(--accent-color); border-left: 4px solid var(--primary-color);">
        <h3 style="color: var(--primary-color);">Project Details</h3>
        <ul style="margin-top: 1rem;">
          <li style="margin-bottom: 0.75rem; border-bottom: 1px solid rgba(0,0,0,0.05); padding-bottom: 0.5rem;"><strong>Client:</strong> <%= project.client %></li>
          <li style="margin-bottom: 0.75rem; border-bottom: 1px solid rgba(0,0,0,0.05); padding-bottom: 0.5rem;"><strong>Location:</strong> <%= project.location %></li>
          <li style="margin-bottom: 0.75rem; border-bottom: 1px solid rgba(0,0,0,0.05); padding-bottom: 0.5rem;"><strong>Year:</strong> <%= project.year %></li>
          <li style="margin-bottom: 0.75rem;"><strong>Status:</strong> <span style="color: var(--primary-color); font-weight: 800;"><%= project.status %></span></li>
        </ul>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
