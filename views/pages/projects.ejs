<%- include('../partials/header') %>

<section class="section">
  <div class="container">
    <h1 class="mb-4">Our Projects</h1>
    <div class="grid grid-3">
      <% projects.forEach(project => { %>
        <div class="card project-card" style="padding: 0;">
          <img src="<%= project.image %>" alt="<%= project.title %>">
          <div style="padding: 1.5rem;">
            <p style="color: var(--primary-color); font-weight: 700; text-transform: uppercase; font-size: 0.75rem; letter-spacing: 0.05em; margin-bottom: 0.5rem;"><%= project.category %></p>
            <h3><%= project.title %></h3>
            <p><%= project.shortDescription %></p>
            <a href="/projects/<%= project.id %>" class="btn btn-outline" style="margin-top: 1rem; width: 100%; text-align: center;">View Details</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>
